<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_bg"
        android:alpha="0.9"
        />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing3"
    android:alpha="0.8"
    />
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/moviedetails_bg_top"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/moviedetails_bg_bottm"
        app:layout_constraintBottom_toBottomOf="parent"/>
<ImageView
    android:layout_width="@dimen/dp_24"
    android:layout_height="@dimen/dp_24"
    android:src="@mipmap/com_icon_movie_default"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="@dimen/dp_30"
    android:id="@+id/i1"
    android:layout_marginLeft="@dimen/dp_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:text="电影详情"
        app:layout_constraintTop_toTopOf="@id/i1"
        app:layout_constraintBottom_toBottomOf="@id/i1"
        app:layout_constraintLeft_toRightOf="@id/i1"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <CheckBox
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:id="@+id/attentionImage"
        android:button="@null"
        android:background="@drawable/movielist_attention"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_70"
        android:textSize="@dimen/sp_20"
        android:textColor="#ffffff"
        android:id="@+id/nameText"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp_259"
        android:layout_height="@dimen/dp_360"
        android:id="@+id/movieImage"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        />

    <Button
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_32"
        android:text="详情"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/moviedetails_button_bg"
        app:layout_constraintTop_toBottomOf="@id/movieImage"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:id="@+id/deteilsButtont"
        app:layout_constraintRight_toLeftOf="@id/prevueButton"
        />
    <Button
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_32"
        android:text="预告"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/moviedetails_button_bg"
        app:layout_constraintTop_toBottomOf="@id/movieImage"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toRightOf="@id/deteilsButtont"
        android:id="@+id/prevueButton"
        app:layout_constraintRight_toLeftOf="@id/stagePhotoButton"
        />
    <Button
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_32"
        android:text="剧照"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/moviedetails_button_bg"
        app:layout_constraintTop_toBottomOf="@id/movieImage"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toRightOf="@id/prevueButton"
        android:id="@+id/stagePhotoButton"
        app:layout_constraintRight_toLeftOf="@id/filmReviewButton"
        />
    <Button
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_32"
        android:text="影评"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/moviedetails_button_bg"
        app:layout_constraintTop_toBottomOf="@id/movieImage"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintLeft_toRightOf="@id/stagePhotoButton"
        android:id="@+id/filmReviewButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        />
    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:id="@+id/backButton"
        android:src="@mipmap/icon_my_default"
        android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/buyTicketImage"
        android:background="@drawable/moviedetails_pay_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:textSize="@dimen/sp_20"
        android:textColor="#ffffff"
        android:text="购票"
        />
</android.support.constraint.ConstraintLayout>