<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seat.activity.SeatActivity">
    <ImageView
        android:id="@+id/seat_image"
        android:layout_width="@dimen/dp_172"
        android:layout_height="wrap_content"
        android:background="@mipmap/rectangle16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="@id/bg_image"/>
   <ImageView
       android:id="@+id/bg_image"
       android:layout_width="@dimen/dp_0"
       android:layout_height="@dimen/dp_240"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@mipmap/beijing2"/>
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"/>
    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/cinema_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"/>
    <TextView
        android:id="@+id/film_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/cinema_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"/>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_24"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:scrollHorizontally="true"
        android:gravity="center_vertical"
        android:background="@drawable/seat_text_bg_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_100"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        android:layout_marginTop="@dimen/dp_30"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/rectangle3copy5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可选"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/rectangle3copy18"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选中"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/rectangle3copy12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/guanyingqu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最佳观影区"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>

    <com.bw.movie.seat.customview.SeatTable
        android:id="@+id/seattable"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_image"
        app:layout_constraintBottom_toTopOf="@id/relative_layout"
        android:layout_marginTop="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_73"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/pay_item_bg_shape">
        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_34"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥\t\t0.0"
            android:textSize="@dimen/sp_36"
            android:textColor="#b11450"
            android:layout_toRightOf="@id/text_total"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/pay_ok"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@mipmap/group2"
            android:layout_toLeftOf="@id/pay_fail"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"/>
        <ImageView
            android:id="@+id/pay_fail"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:background="@mipmap/group3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>