<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="@dimen/dp_312"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="@dimen/dp_90"
    android:layout_marginBottom="@dimen/dp_20">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<com.facebook.drawee.view.SimpleDraweeView
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_70"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="@dimen/dp_10"
    android:id="@+id/cinemaImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinemaName"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:text="CGV影城"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@id/cinemaImage"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addressText"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:maxLines="2"
            app:layout_constraintLeft_toRightOf="@id/cinemaImage"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@id/cinemaName"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distance"
            app:layout_constraintBottom_toBottomOf="@id/cinemaImage"
            app:layout_constraintLeft_toRightOf="@id/cinemaImage"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>