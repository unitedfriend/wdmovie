<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/my_attention_shape_item"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="@dimen/dp_10"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cinemaimage"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                fresco:roundedCornerRadius="@dimen/dp_4"
                fresco:actualImageScaleType="fitCenter"
                />
            <TextView
                android:id="@+id/cinemaname"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/cinemaimage"
                app:layout_constraintTop_toTopOf="@id/cinemaimage"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/cinemaaddress"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/cinemaimage"
                app:layout_constraintTop_toBottomOf="@id/cinemaname"
                app:layout_constraintBottom_toTopOf="@id/distance"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:maxLines="2"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/cinemaimage"
                app:layout_constraintBottom_toBottomOf="@id/cinemaimage"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                />
            <CheckBox
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:id="@+id/attentionImage"
                android:button="@null"
                android:background="@drawable/movielist_attention"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cinemaimage"
                android:visibility="invisible"
                />
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:id="@+id/attentionImage_true"
                android:background="@mipmap/com_icon_collection_selected"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cinemaimage"

               />
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:id="@+id/attentionImage_false"
                android:background="@mipmap/com_icon_collection_default"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cinemaimage"

                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>