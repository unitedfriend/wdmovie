<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/popup_filmdetails_details_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:id="@+id/typeText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_155"
            android:layout_marginTop="@dimen/dp_20"
            />
        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:background="@mipmap/com_icon_down_default"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:id="@+id/dimensImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:id="@+id/directorText"
            app:layout_constraintTop_toBottomOf="@id/typeText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_155"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:id="@+id/timeText"
            app:layout_constraintTop_toBottomOf="@id/directorText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_155"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:id="@+id/addressText"
            app:layout_constraintTop_toBottomOf="@id/timeText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_155"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_24"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="剧情简介"
            android:layout_marginTop="@dimen/dp_130"
            android:id="@+id/t1"
            />
        <TextView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:id="@+id/bg1"
            app:layout_constraintTop_toBottomOf="@id/t1"
            app:layout_constraintLeft_toLeftOf="@id/t1"
            android:background="@drawable/item_titletext"
            android:layout_marginTop="@dimen/dp_6"
            />
        <com.bw.movie.home.view.MySpannableTextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@id/bg1"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/synopsisText"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/synopsisText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_24"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="演职人员"
            android:id="@+id/t2"
            />
        <TextView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:id="@+id/bg2"
            app:layout_constraintTop_toBottomOf="@id/t2"
            app:layout_constraintLeft_toLeftOf="@id/t2"
            android:background="@drawable/item_titletext"
            android:layout_marginTop="@dimen/dp_6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bg2"
            app:layout_constraintLeft_toLeftOf="@id/bg2"
            android:id="@+id/actorList"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            />selectedPos
    </android.support.constraint.ConstraintLayout>
<com.facebook.drawee.view.SimpleDraweeView
    android:layout_width="@dimen/dp_111"
    android:layout_height="@dimen/dp_149"
    android:id="@+id/movieImage"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_50"
    />
</android.support.constraint.ConstraintLayout>