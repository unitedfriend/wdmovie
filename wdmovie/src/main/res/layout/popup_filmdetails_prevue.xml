<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#10000000">
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/popup_filmdetails_details_bg"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="预告片"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/t1"
        />
    <TextView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_3"
        android:id="@+id/bg1"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintLeft_toLeftOf="@id/t1"
        android:background="@drawable/item_titletext"
        android:layout_marginTop="@dimen/dp_6"
        />
    <ImageView
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:background="@mipmap/com_icon_down_default"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:id="@+id/dimisImage"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/recycleView"></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>